<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?contentContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        style="?textFieldTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <com.bluezero.phaeton.widgets.FilteredEditText
        android:id="@+id/forenameEditText"
        style="?editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter forename..."
        android:imeOptions="actionNext"
        android:inputType="textPersonName" >

        <requestFocus />
    </com.bluezero.phaeton.widgets.FilteredEditText>

    <com.bluezero.phaeton.widgets.FilteredEditText
        android:id="@+id/surnameEditText"
        style="?editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter surname..."
        android:imeOptions="actionDone"
        android:inputType="textPersonName" />

    <TextView
        style="?textFieldTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Date Of Birth" />

    <com.bluezero.phaeton.widgets.DatePickerButton
        android:id="@+id/dateOfBirthButton"
        style="?dateTimePickerButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/createBirthdayReminderCheckBox"
        style="?checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set birthday calendar reminder" />

</LinearLayout>